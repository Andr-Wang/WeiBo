<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/slidingmenu_left_background">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/left_menu_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%w"
        app:layout_heightPercent="30%h"

        >

        <ImageView
            android:id="@+id/cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%w"
            app:layout_heightPercent="100%h"
            android:scaleType="fitCenter"


            />
        <weibo.wangtao.weibo.Widget.FilterImageView
            android:id="@+id/userphoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="30%h"
            app:layout_heightPercent="30%h"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="20%h"/>
        <TextView
            android:id="@+id/screen_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="50%h"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="5%h"
            android:text="昵称"
            app:layout_textSizePercent="5%w"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userphoto"
            android:gravity="center"
            android:textColor="@color/slidingmenu_left_menu_screen_neme"

            />
        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="50%h"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="5%h"
            android:text="签名"
            app:layout_textSizePercent="3%w"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/screen_name"
            android:gravity="center"
            android:textColor="@color/slidingmenu_left_menu_description"

            />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%w"
        app:layout_heightPercent="50%h"
        android:orientation="vertical"
        >

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/public_timeline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="90%w"
            app:layout_heightPercent="15%h"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="10%w"
                app:layout_heightPercent="10%w"
                app:layout_marginLeftPercent="15%w"
                android:background="@drawable/user"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_heightPercent="80%h"
                app:layout_marginLeftPercent="10%w"
                android:layout_gravity="center_vertical"
                android:text="@string/sliding_left_public_timeline"
                android:textColor="@color/slidingmenu_left_menu_screen_neme"
                android:gravity="center_vertical"
                app:layout_textSizePercent="30%h"

                />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/friend_timeline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="90%w"
            app:layout_heightPercent="15%h"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="10%w"
                app:layout_heightPercent="10%w"
                app:layout_marginLeftPercent="15%w"
                android:background="@drawable/user"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_heightPercent="80%h"
                app:layout_marginLeftPercent="10%w"
                android:layout_gravity="center_vertical"
                android:text="@string/sliding_left_friend_timeline"
                android:textColor="@color/slidingmenu_left_menu_screen_neme"
                android:gravity="center_vertical"
                app:layout_textSizePercent="30%h"

                />

        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>



