<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_bar_photo_browse"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/common_title_bg" >

        <ImageView
            android:id="@+id/header_bar_photo_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="12dp"
            android:paddingRight="5dip"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_back2" />

        <TextView
            android:id="@+id/header_bar_photo_count"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="20dip"
            android:paddingRight="10dp"
            android:layout_toRightOf="@id/header_bar_photo_back"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/primary_title_text_color"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/header_bar_photo_delete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingLeft="5dip"
            android:scaleType="fitCenter"
            android:src="@drawable/post_pager_delete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_save"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:minWidth="50dip"
            android:gravity="center"
            android:background="@drawable/album_finish"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:text="保存"
            android:visibility="gone"
            android:layout_height="30dip" />
    </RelativeLayout>

</LinearLayout>